<Window x:Class="SoftMarine.View.EditInspection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftMarine.View" xmlns:viewmodel="clr-namespace:SoftMarine.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:EditInspectionViewModel}"
        mc:Ignorable="d"
        Title="Изменение инспекции" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <!--Строка 0 Столбец 0-->
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <!--Название инспекции-->
                <Label Grid.Row="0" Grid.Column="0" FontSize="15" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="Auto">Название инспекции</Label>
                <TextBox  Grid.Row="0" Grid.Column="1" FontSize="15" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="150" Text="{Binding Name, ValidatesOnDataErrors=True}"></TextBox>

                <!--Инспектор-->
                <Label Grid.Row="1" Grid.Column="0" FontSize="15" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="150">Инспектор</Label>
                <ComboBox Grid.Row="1" Grid.Column="1" FontSize="15" Width="150" ItemsSource="{Binding Inspectors}" SelectedItem="{Binding SelectedInspector, ValidatesOnDataErrors=True, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} ({1})">
                                        <Binding Path="Name"/>
                                        <Binding Path="Number"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!--Дата-->
                <Label Grid.Row="2" Grid.Column="0" FontSize="15" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="150">Дата инспекции</Label>
                <DatePicker  Grid.Row="2" Grid.Column="1" FontSize="15" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="150" SelectedDate="{Binding Date, ValidatesOnDataErrors=True}"></DatePicker>
            </Grid>

            <!--Строка 0 Столбец 1-->
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.25*"></RowDefinition>
                    <RowDefinition Height="0.5*"></RowDefinition>
                    <RowDefinition Height="0.25*"></RowDefinition>
                </Grid.RowDefinitions>
                <!--Комментарий инспектора-->
                <Label Grid.Row="0" FontSize="15" HorizontalAlignment="Center">Комментарий инспектора</Label>
                <TextBox Grid.Row="1" Margin="10,0" FontSize="15" Text="{Binding Comment}"></TextBox>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button  Width="100" Margin="15,5" Command="{Binding SaveCommand}">Сохранить</Button>
                    <Button  Width="100" Margin="15,5" Command="{Binding CloseCommand}">Отмена</Button>
                </StackPanel>
            </Grid>

            <!--DataGrid-->
            <!--Строка 1 Столбец 0-->
            <DataGrid FontSize="15" AutoGenerateColumns="False" ItemsSource="{Binding Remarks}" 
          Grid.Row="1" Grid.ColumnSpan="2" CanUserDeleteRows="True" SelectedItem="{Binding SelectedRemark}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Текст замечания" Binding="{Binding Text, ValidatesOnDataErrors=True}" Width="0.4*"/>
                    <!-- Колонка с DatePicker -->
                    <DataGridTemplateColumn Header="Дата" Width="0.15*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Date, StringFormat=dd.MM.yyyy, ValidatesOnDataErrors=True}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding Date, ValidatesOnDataErrors=True, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Комментарий" Binding="{Binding Comment}" Width="0.4*"/>

                    <!-- Столбец с кнопкой удаления -->
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Удалить" Command="{Binding DataContext.DeleteRemarkCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}">
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
